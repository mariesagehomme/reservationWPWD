{% extends 'base.html.twig' %}

{% block title %}{{titre}}{% endblock %}

{% block body %}
<h1 class="text-center mt-4 mb-4">{{ titre }}</h1>
<table class="table text-center  mt-4 mb-4">
    <thead>
        <tr style="background-color: lightblue; color:white;">
            <th>LOGIN</th>
            <th>PASSWORD</th>
            <th>ROLE</th>
            <th>FISTNAME</th>
            <th>LASTNAME</th>
            <th>EMAIL</th>
            <th>LANGUE</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
    {% for user in users %}
       <tr>
        <td>{{ user.login }}</td>
        <td>{{ user.password }}</td>
        <td>{{ user.role}}</td>
        <td>{{ user.firstname }}</td>
        <td>{{ user.lastname }}</td>
        <td>{{ user.email }}</td>
        <td>{{ user.langue }}</td>
        <td>
            <a href="{{ path('user_show', {'id': user.id}) }}" class="btn btn-primary">Show</a>
            <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-warning">Edit</a>
        </td>
    {% endfor %}   
   </tbody>
</table>
   
<a href="{{ path('user_new')}}" class="btn btn-info">Add a new user</a>
{% endblock %}
