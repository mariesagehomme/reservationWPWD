{% extends 'base.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block body %}
<h1 class="text-center">{{ title }}</h1>
<table class="table text-center  mt-4 mb-4 info-sheet w-50 mx-auto">
    <thead>
        <tr>
            <th>LOGIN</th>
            <th>PASSWORD</th>
            <th>FISTNAME</th>
            <th>LASTNAME</th>
            <th>EMAIL</th>
            <th>LANGUE</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
    {% for user in users %}
       <tr>
        <td>{{ user.login }}</td>
        <td>{{ user.password }}</td>
        <td>{{ user.firstname }}</td>
        <td>{{ user.lastname }}</td>
        <td>{{ user.email }}</td>
        <td>{{ user.langue }}</td>
        <td>
            <a href="{{ path('user_show', {'id': user.id}) }}" class="btn btn-primary">Show</a>
        </td>
    {% endfor %}   
   </tbody>
</table>
{% endblock %}
