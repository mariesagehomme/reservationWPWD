{% extends 'base.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block body %}
    <div class="col-5 ml-auto mr-auto mt-5 p-4 info-sheet">

        <h2>{{ user.firstname }} {{ user.lastname }}</h2>
        <hr>
        <ul style="padding: 0;"> 
            <li>{{ user.login}}</li>
            <li>{{ user.password}}</li>
            <li>{{ user.email}}</li>
            <li>{{ user.langue}}</li>
        </ul>
        <a href="{{ path('user_index') }}" class="btn btn-info">back to list</a>
     </div>
{% endblock %}
