{% extends 'base.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block body %}
 <h1 class="text-center">{{ title }}</h1>
 <table class="table text-center w-50 mr-auto ml-auto mt-4 mb-4">
        <thead>
            <tr style="background-color: lightblue; color:white;">
                <th>ID</th>
                <th>ROLE</th>
                <th>ACTION</th>
            </tr>
        </thead>
        <tbody>
        {% for role in roles %}
         <tr> 
            <td>{{ role.id }}</td>
            <td>{{ role.role }}</td>
            <td>
                <a href="{{ path('role_show', {'id':role.id}) }}" class="btn btn-warning">Show</a>
            
            </td>
         </tr>   
        {% endfor %}   
        </tbody>
</table>
{% endblock %}
