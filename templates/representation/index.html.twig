{% extends 'base.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block body %}

 <h1 class="text-center mt-4 mb-4">{{ title }}</h1>
   <table class="table text-center w-50 mr-auto ml-auto mt-4 mb-4">
        <thead>
            <tr>
                <th>ID</th>
                <th>SHOW</th>
                <th>LOCATION</th>
                <th>SCHEDULE</th>               
                <th>ACTION</th>
            </tr>
        </thead>
        <tbody>
        {% for representation in representations %}
            <tr>
                <td>{{ representation.id }}</td>
                <td>{{ representation.theShow.title }}</td> 
                
                <td> {% if representation.theLocation %}
                        <span>{{ representation.theLocation.designation }}</span>
                    {% endif %}
                </td>
                <td>{{ representation.schedule|date('d-m-Y H:i') }}</td>
                <td>
                    <a href=" {{ path('representation_show', {'id':representation.id }) }}" class="btn btn-warning">Show</a>
                </td>
            </tr>
        {% endfor %}   
        </tbody>
    </table>
{% endblock %}
