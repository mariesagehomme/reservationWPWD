{% extends 'base.html.twig' %}

{% block title %}{{titre}}{% endblock %}

{% block body %}

<h1 class="text-center">{{ titre }}</h1>
   <table class="table text-center w-50 mr-auto ml-auto mt-4 mb-4">
        <thead>
            <tr>
                <th>ID</th>
                <th>POSTAL CODE</th>
                <th>LOCALITY</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for locality in localites %}
            <tr>
                <td>{{ locality.id }}</td>
                <td>{{ locality.postalCode }}</td>
                <td>{{ locality.locality }}</td>
                <td>
                    <a href="{{ path('locality_show', {'id': locality.id}) }}" class="btn btn-primary">Show</a>
                </td>                
            </tr>

        {% endfor %}  
       </tbody>
    </table>
{% endblock %}
